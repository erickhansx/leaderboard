<html>
  <head>
    <meta charset='utf-8' />
    <title>{{htmlWebpackPlugin.options.title}}</title>
    <meta
      name='description'
      content='{{htmlWebpackPlugin.options.description}}'
    />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
  </head>
  <body>
    <h1 class='leaderboard__h1'>Leaderboard</h1>
    <section class='leaderboard'>
      <div class='leaderboard__recent-scores'>
        <div class='leaderboard__recent-scores--btn'>

          <h2>Recent scores</h2>
          <button class='refresh-btn' type='button'>Refresh</button>
        </div>
        <ul class='leaderboard__list'>
        </ul>
      </div>
      <div class='leaderboard__add-score'>
        <h2>Add your score</h2>
        <input type='text' placeholder='Your name' />
        <input type='text' placeholder='Your score' />
        <button class='submit-btn' type='button'>Submit</button>
      </div>
    </section>
  </body>
</html>